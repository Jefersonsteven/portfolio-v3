---
import Layout from "../layouts/Layout.astro";
import "./index.css";
---

<Layout title="Jefferson Steven.">
  <main>
    <section class="home page">
      <main>
        <h1 class="home__title">CREATIVE DEVELOPER</h1>
        <h2 class="home__subtitle">
          Merging code and creativity to build impactful visual experiences.
        </h2>
      </main>
      <footer>
        <p><strong class="home__scroll-for-more"></strong></p>
        <img
          class="home__arrow-scroll"
          src="/assets/svgs/arrow.svg"
          alt="arrow"
        />
      </footer>
    </section>
  </main>
</Layout>
